<!-- Include header -->
<%- include('include/_header') %>
<!-- Include header -->

<!-- Main Site -->
<main id="site-main" class="sign-in-main">

  <!-- user form layout container -->

    <div class="form-container glass">
      <form id="sign_in" method="POST" action="/login">
        <% if (locals.logout) { %>
          <div class="alert text-center">
            <%= logout %> 
          </div>
        <% } %>  
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="email" required>
    
        <div class="division"></div>

        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="password" required>
    
        <div class="division"></div>
        
        <input type="submit" value="Sign in">
        <a href="/add-user">Create an account here.</a>
      </form>
    <div class="side-section">
        <h1 class="section-header">
          Welcome to Birdly
        </h1>
        <p class="section-message">
          Birdly is a full stack web application for bird sighting tracking that utilizes the MongoDB, Express, and Node.js stack. The app includes an interactive map, location tracking, and user authentication features to assist users in their birding adventures.
        </p>
    </div>
    </div>

  <!-- user form layout container -->
</main>
<!-- Main Site -->

<!-- Include footer -->
<%- include('include/_footer') %>
